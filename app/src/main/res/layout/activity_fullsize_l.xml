<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#000000"
    android:padding="4dip">

    <ImageView
        android:contentDescription="@string/desc_fullsize"
        android:id="@+id/web_image"
        android:src="@drawable/spinner"
        android:background="#000000"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="4"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_width="0dp"
        android:layout_weight="1">

        <ImageButton
            android:contentDescription="@string/desc_TSO"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:src="@drawable/selector_tso"
            android:onClick="callback_TSO"
            android:layout_weight="1">
        </ImageButton>

        <ImageButton
            android:contentDescription="@string/desc_POS"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:src="@drawable/selector_pos"
            android:onClick="callback_POS"
            android:layout_weight="1">
            </ImageButton>

        <ImageButton
            android:contentDescription="@string/desc_FMI"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:src="@drawable/selector_fmi"
            android:onClick="callback_FMI"
            android:layout_weight="1">
        </ImageButton>

    </LinearLayout>

</LinearLayout>

