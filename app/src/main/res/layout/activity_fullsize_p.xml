<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="4dip">

    <ImageView
        android:id="@+id/web_image"
        android:src="@drawable/spinner"
        android:contentDescription="@string/desc_fullsize"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000000"
        android:layout_weight="4"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ImageButton
            android:contentDescription="@string/desc_FMI"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/selector_fmi"
            android:onClick="callback_FMI"
            android:layout_weight="1"
            android:scaleType="fitCenter">
        </ImageButton>

        <ImageButton
            android:contentDescription="@string/desc_POS"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/selector_pos"
            android:onClick="callback_POS"
            android:layout_weight="1"
            android:scaleType="fitCenter">
        </ImageButton>

        <ImageButton
            android:contentDescription="@string/desc_TSO"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/selector_tso"
            android:onClick="callback_TSO"
            android:layout_weight="1"
            android:scaleType="fitCenter">
        </ImageButton>

    </LinearLayout>

</LinearLayout>
